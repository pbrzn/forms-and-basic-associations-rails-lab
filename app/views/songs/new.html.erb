<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>

  <%= f.label :genre_name %>
  <%= f.text_field :genre_id, list: "genre_autocomplete" %>
  <datalist id="genre_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist><br>

  <%= f.label :note_contents %>
  <input name="song[note_contents][]" id="song_notes_1" type="text"/>
  <input name="song[note_contents][]" id="song_notes_2" type="text"/>

  <%= f.submit "commit" %>
<% end %>
